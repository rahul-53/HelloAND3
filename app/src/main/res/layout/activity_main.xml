<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2f2f2f">

    <TextView
        android:id="@+id/tvAND03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello AND03"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="60dp"/>
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Layout"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvAND03"/>
    <View
        android:id="@+id/ViewCircle"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/tvWelcome"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Rahul Yadav"
        android:textColor="#ff0000"
        android:layout_below="@+id/ViewCircle"
        android:layout_marginStart="10dp"
        android:textSize="22sp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:drawableEnd="@drawable/ic__69859"
        android:drawablePadding="10dp"

        />
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:25"
        android:textSize="22sp"
        android:textColor="#ff0000"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="10dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/tvBtnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00ff00"
        android:padding="20dp"
        android:text="Next"
        android:textColor="@color/black"
        />
<View
    android:id="@+id/tvViewThree"
    android:layout_width="140dp"
    android:layout_height="12dp"
    android:layout_above="@+id/tvBtnNext"
    android:background="#C4C4C4"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="60dp"
    />
    <View
        android:id="@+id/tvViewTwo"
        android:layout_width="166dp"
        android:layout_height="20dp"
        android:layout_above="@+id/tvViewThree"
        android:background="#C4C4C4"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="40dp"
        />
    <View
        android:id="@+id/tvViewOne"
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tvViewTwo"
        android:background="#C4C4C4"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        />

</RelativeLayout>